page{
  background-image: url('http://img.mp.itc.cn/upload/20170628/22745573ed924520b3e68addf090362e_th.jpg');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.container1{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.additem{
  width: 100%;
}
.add{
  display: flex;
  flex-direction: row;
  border: 5rpx solid rgb(133, 230, 7);
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.plus{
  width: 41rpx;
  height: 41rpx;
  padding-right: 20rpx;
}
.InputAdd{
  padding-left: 20rpx;
  font-size: 28rpx;
}

.today{
  font-size: 10px;
}
.todo-today{
  font-size: 15px;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  vertical-align: center;
  margin: 2px;
}
.todo-today1{
  width: 100%;
}
.today-item{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  border-radius: 20rpx;
}
.itemdescriptiont{
  flex: 1;
  font-size: 40rpx;
  color: red;
}
.itemdescriptiontcompleted{
  flex: 1;
  text-decoration: line-through;
  font-size: 40rpx;
  color: red;
}
.itemremove{
  cursor: pointer;
  padding-top: 7rpx;
}
.itemcheckbox{
  margin-right: 20rpx;
}