  <view>地区：<input type="text" name="area" placeholder="{{area}}"></input></view>
  <view>学校：<input type="text" name="school" placeholder="{{school}}"></input></view>
  <view>工作：<input type="text" name="work" placeholder="{{work}}"></input></view>
